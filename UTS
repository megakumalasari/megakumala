    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
    display.setText("");
    angka1=0.0;
    angka2=0.0;
    jumlah=0.0;
    angka="";
    }                                        

    private void btnangka0ActionPerformed(java.awt.event.ActionEvent evt) {                                          
